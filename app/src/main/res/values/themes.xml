<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlantIrrigSys" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
        <!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="BottomNavigationViewTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <!-- Set your desired text size here -->
        <!-- You can also customize other text attributes like font family, color, etc. -->
    </style>

    <style name="Theme.PlantIrrigSys" parent="Base.Theme.PlantIrrigSys" >
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowTransition</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
<!--        <item name="android:navigationBarColor">@color/color_F0F2FF</item>-->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>


    <style name="AppTheme.WindowTransition">
        <item name="android:activityOpenEnterAnimation">@anim/pull_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/push_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/pull_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/push_out_right</item>
    </style>


</resources>