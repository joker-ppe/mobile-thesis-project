<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/_15sdp"
        android:paddingTop="@dimen/_25sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingBottom="@dimen/_25sdp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_back"
            android:textSize="18sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="☺️"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"

            app:layout_constraintTop_toBottomOf="@id/tvName">

            <FrameLayout
                android:id="@+id/bgScanQrCode"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/textview_border"
                android:padding="@dimen/_10sdp"
                android:visibility="gone"
                app:layout_constraintDimensionRatio="2:1"

                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgScanQrCode"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center"

                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="@dimen/_1sdp"
                    android:src="@drawable/scan_qr_code" />
            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bgConnectedCabinet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"

                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bgCabinetInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_border"
                    android:padding="@dimen/_10sdp"

                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imgCabinet"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"

                        android:src="@drawable/cabinet"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <TextView
                        android:id="@+id/tvNameValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold"

                        app:layout_constraintStart_toEndOf="@id/imgCabinet"
                        app:layout_constraintTop_toTopOf="@id/imgCabinet"
                        app:layout_constraintBottom_toBottomOf="@id/imgCabinet"/>

                    <TextClock
                        android:id="@+id/tvTimeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"

                        app:layout_constraintBottom_toBottomOf="@id/tvNameValue"
                        app:layout_constraintEnd_toStartOf="@id/imgRemoveCabinet"
                        app:layout_constraintTop_toTopOf="@id/tvNameValue" />

                    <ImageView
                        android:id="@+id/imgRemoveCabinet"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"

                        android:background="?selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_remove_cabin"

                        app:layout_constraintBottom_toBottomOf="@id/tvNameValue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvNameValue" />

                    <ImageView
                        android:id="@+id/imgTemperature"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_20sdp"

                        android:src="@drawable/temperature"

                        app:layout_constraintBottom_toTopOf="@id/tvTemperatureValue"
                        app:layout_constraintEnd_toStartOf="@id/imgHumidity"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvNameValue" />

                    <ImageView
                        android:id="@+id/imgHumidity"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"

                        android:src="@drawable/humidity"

                        app:layout_constraintBottom_toTopOf="@id/tvHumidityValue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imgTemperature"
                        app:layout_constraintTop_toTopOf="@id/imgTemperature" />

                    <TextView
                        android:id="@+id/tvTemperatureValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="0"

                        app:layout_constraintBottom_toTopOf="@id/bgSchedule"
                        app:layout_constraintEnd_toEndOf="@id/imgTemperature"
                        app:layout_constraintStart_toStartOf="@id/imgTemperature"
                        app:layout_constraintTop_toBottomOf="@id/imgTemperature" />

                    <TextView
                        android:id="@+id/tvHumidityValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="0"

                        app:layout_constraintBottom_toBottomOf="@id/tvTemperatureValue"
                        app:layout_constraintEnd_toEndOf="@id/imgHumidity"
                        app:layout_constraintStart_toStartOf="@id/imgHumidity"
                        app:layout_constraintTop_toBottomOf="@id/imgHumidity" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/bgSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"

                        app:layout_constraintTop_toBottomOf="@id/tvTemperatureValue">

                        <View
                            android:id="@+id/line"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/black"

                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddSchedule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose Schedule"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="visible"

                            app:layout_constraintTop_toBottomOf="@id/line"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/bgScheduleInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="gone"

                            app:layout_constraintTop_toBottomOf="@id/line"
                            >

                            <ImageView
                                android:id="@+id/imgSchedule"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"

                                android:src="@drawable/schedule"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />

                            <TextView
                                android:id="@+id/tvScheduleTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lich tuoi nuoc"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:layout_marginStart="@dimen/_5sdp"

                                app:layout_constraintTop_toTopOf="@id/imgSchedule"
                                app:layout_constraintStart_toEndOf="@id/imgSchedule"
                                app:layout_constraintBottom_toBottomOf="@id/imgSchedule"
                                />

                            <ImageView
                                android:id="@+id/imgProgress"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_15sdp"

                                android:src="@drawable/checked"
                                app:layout_constraintTop_toBottomOf="@id/imgSchedule"
                                app:layout_constraintStart_toStartOf="parent"
                                />

                            <TextView
                                android:id="@+id/tvProgress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1/4 days - 25%\n1/30 slots - 3%"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:layout_marginStart="@dimen/_5sdp"

                                app:layout_constraintTop_toTopOf="@id/imgProgress"
                                app:layout_constraintStart_toEndOf="@id/imgProgress"
                                app:layout_constraintBottom_toBottomOf="@id/imgProgress"
                                />

                            <com.github.ybq.android.spinkit.SpinKitView
                                android:id="@+id/spin_kit"
                                style="@style/SpinKitView.FadingCircle"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                app:SpinKit_Color="?android:colorPrimary"
                                android:layout_marginTop="@dimen/_15sdp"

                                app:layout_constraintTop_toBottomOf="@id/imgProgress"
                                app:layout_constraintStart_toStartOf="parent"
                                />

                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Lượt tưới tiếp theo:\n12:00 PM - 12/12/2021"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:layout_marginStart="@dimen/_5sdp"

                                app:layout_constraintTop_toTopOf="@id/spin_kit"
                                app:layout_constraintStart_toEndOf="@id/spin_kit"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/spin_kit"
                                />

                            <ImageView
                                android:id="@+id/imgShowInfoSchedule"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"

                                android:background="?selectableItemBackgroundBorderless"
                                android:src="@drawable/information"

                                app:layout_constraintTop_toTopOf="@id/imgSchedule"
                                app:layout_constraintBottom_toBottomOf="@id/imgSchedule"
                                app:layout_constraintEnd_toEndOf="parent"
                                />

                            <ImageView
                                android:id="@+id/imgActionSlot"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"

                                android:background="?selectableItemBackgroundBorderless"
                                android:src="@drawable/stop"

                                app:layout_constraintTop_toTopOf="@id/spin_kit"
                                app:layout_constraintBottom_toBottomOf="@id/spin_kit"
                                app:layout_constraintEnd_toEndOf="parent"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bgTemperature"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/textview_border"
                    android:padding="@dimen/_10sdp"
                    app:layout_constraintDimensionRatio="2:1.2"

                    app:layout_constraintTop_toBottomOf="@id/bgCabinetInfo">

                    <ImageView
                        android:id="@+id/imgTemp"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"

                        android:src="@drawable/temperature"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvTempTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="normal"

                        app:layout_constraintBottom_toBottomOf="@id/imgTemp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/imgTemp" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChartTemperature"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/_5sdp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imgTemp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bgHumidity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/textview_border"
                    android:padding="@dimen/_10sdp"
                    app:layout_constraintDimensionRatio="2:1.2"

                    app:layout_constraintTop_toBottomOf="@id/bgTemperature">

                    <ImageView
                        android:id="@+id/imgHum"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"

                        android:src="@drawable/humidity"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvHumTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="normal"

                        app:layout_constraintBottom_toBottomOf="@id/imgHum"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/imgHum" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChartHumidity"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/_5sdp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imgHum" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>