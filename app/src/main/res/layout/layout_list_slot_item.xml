<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:cardUseCompatPadding="true"
        app:strokeWidth="@dimen/_1sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            >
            <TextView
                android:id="@+id/tvIndex"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:text="1"
                android:gravity="center"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <View
                android:id="@+id/line"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:background="@color/black"
                android:layout_marginStart="@dimen/_5sdp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvIndex"
                />

            <ImageView
                android:id="@+id/imgStart"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"

                android:src="@drawable/pin"
                android:layout_marginStart="@dimen/_10sdp"

                app:layout_constraintStart_toEndOf="@id/line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/imgFinish"
                />
            
            <TextView
                android:id="@+id/tvStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From: 19:23"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp"
                
                app:layout_constraintStart_toEndOf="@id/imgStart"
                app:layout_constraintTop_toTopOf="@id/imgStart"
                app:layout_constraintBottom_toBottomOf="@id/imgStart"
                />

            <ImageView
                android:id="@+id/imgFinish"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"

                android:src="@drawable/pin"

                app:layout_constraintStart_toStartOf="@id/imgStart"
                app:layout_constraintTop_toBottomOf="@id/imgStart"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/tvFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To: 19:23"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp"

                app:layout_constraintStart_toEndOf="@id/imgFinish"
                app:layout_constraintTop_toTopOf="@id/imgFinish"
                app:layout_constraintBottom_toBottomOf="@id/imgFinish"
                />

            <ImageView
                android:id="@+id/imgStatus"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/checked"
                android:layout_marginEnd="@dimen/_10sdp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>