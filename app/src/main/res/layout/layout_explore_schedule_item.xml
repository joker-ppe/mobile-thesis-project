<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:cardUseCompatPadding="true"
        app:strokeWidth="@dimen/_1sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7">

            <FrameLayout
                android:id="@+id/bgImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"

                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:scaleType="centerCrop"
                    android:src="@drawable/image_default" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/viewLeft"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:background="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="0.5:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/viewRight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_white_to_transparent"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/viewLeft" />

                    <ImageView
                        android:id="@+id/iconView"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/view"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/iconCopy"
                        />

                    <ImageView
                        android:id="@+id/iconCopy"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/copy"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iconView"
                        />

                    <TextView
                        android:id="@+id/tvNumberOfViews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginStart="@dimen/_5sdp"
                        app:layout_constraintStart_toEndOf="@id/iconView"
                        app:layout_constraintTop_toTopOf="@id/iconView"
                        app:layout_constraintBottom_toBottomOf="@id/iconView"
                        />

                    <TextView
                        android:id="@+id/tvNumberOfCopies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginStart="@dimen/_5sdp"
                        app:layout_constraintStart_toEndOf="@id/iconCopy"
                        app:layout_constraintTop_toTopOf="@id/iconCopy"
                        app:layout_constraintBottom_toBottomOf="@id/iconCopy"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingEnd="@dimen/_10sdp"

                app:layout_constraintTop_toBottomOf="@id/bgImage">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Lịch tưới cây cam"
                    android:textSize="16sp"
                    android:textColor="@color/black"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textSize="15sp"
                    android:textColor="@color/design_default_color_primary"
                    android:layout_marginTop="@dimen/_5sdp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTitle" />

                <TextView
                    android:id="@+id/tvDaysUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" days"
                    android:textSize="15sp"

                    app:layout_constraintStart_toEndOf="@id/tvDays"
                    app:layout_constraintTop_toTopOf="@id/tvDays"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="public"
                    android:visibility="gone"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textSize="15sp"

                    app:layout_constraintStart_toEndOf="@id/tvDaysUnit"
                    app:layout_constraintTop_toTopOf="@id/tvDays"/>

                <TextView
                    android:id="@+id/tvUpdateAtUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last updated at: "
                    android:textSize="12sp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDays"/>

                <TextView
                    android:id="@+id/tvUpdateAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/12/2023 13:20:45"
                    android:textSize="12sp"

                    app:layout_constraintStart_toEndOf="@id/tvUpdateAtUnit"
                    app:layout_constraintTop_toTopOf="@id/tvUpdateAtUnit"/>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="@dimen/_5sdp"

                    app:layout_constraintTop_toBottomOf="@id/tvUpdateAt"
                    />

                <TextView
                    android:id="@+id/tvOwnerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner: "
                    android:textSize="13sp"
                    android:layout_marginTop="@dimen/_5sdp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line"/>

                <TextView
                    android:id="@+id/tvOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minh Hieu"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"

                    app:layout_constraintStart_toEndOf="@id/tvOwnerTitle"
                    app:layout_constraintTop_toTopOf="@id/tvOwnerTitle"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>